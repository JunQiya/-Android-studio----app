<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dp" /> <!-- 设置圆角的半径 -->
            <solid android:color="@android:color/transparent" /> <!-- 设置透明背景@android:color/transparent -->
        </shape>
    </item>
    <!-- Image -->
    <item android:drawable="@drawable/user" /> <!-- 设置图片资源 -->
</layer-list>
